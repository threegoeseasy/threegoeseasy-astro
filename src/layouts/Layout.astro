<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @font-face {
    font-family: "w95";
    src: url("/w95fa.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  iframe {
    /* aspect-ratio: 4/3; */
    width: 100%;
    height: 700px;
  }

  html {
    font-family: "w95", system-ui, monospace;
  }
  body {
    font-family: "w95", system-ui, monospace;
    min-height: 100vh;
    height: 100%;
    width: 100wv;
    cursor: url(/mouse.png), default;
    @apply dark:text-orange-400 !important;
  }

  a {
    cursor: url(/pointer.png), pointer;
  }
  button {
    cursor: url(/pointer.png), pointer !important;
  }
</style>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }
  window.localStorage.setItem("theme", theme);
</script>
