      }

      html {
        font-family: "w95", "Courier New", "Fira Code Retina",
          "JetBrains Mono Light", system-ui, monospace;
      }
      body {
        font-family: "w95", "Courier New", system-ui, monospace;
        overflow-x: hidden;
        min-height: 50vh;
        max-height: max-content;
        width: 100vw;
        cursor: url(/mouse.png), default;
        @apply dark:text-orange-400 !important;
      }

      a {
        cursor: url(/pointer.png), pointer;
      }
      button {
        cursor: url(/pointer.png), pointer !important;
      }
    </style>

    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      window.localStorage.setItem("theme", theme);
    </script>
  </body>
